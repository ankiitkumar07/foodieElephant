<div class="header">
	<div class="brand-wrapper">
		<div class="container-fluid">
			<div class="row">
				<div class="col-10 col-md-6 ml-auto text-right">
					<h1 class="display-3">Foodie Elephant</h1>
					<p>We just love food! And that's what we can make you do.</p>
					<p>The best meals at our restaurants can be found right here.</p>
					<%= link_to 'Our Menu', dishes_path, class: 'link' %>
				</div>
			</div>
		</div>
	</div>
</div>


<section id="cuisine-section">
	<div class="container">
		<div class="row">
			<div class="col-12 text-center">
				<h1 class="display-4">Our Cuisine</h1>
			</div>
		</div>
		<div class="row justify-content-around pt-5 pb-5">
			<% @cuis.each do |c| %>
				<div class="col-12 col-md-5 m-3 text-center">
					<div class="cuisine">
						<%= link_to '', cuisine_path(c), class: 'card-link' %>
						<!-- <h1 class="display-4">Lorem ipsum dolor.</h1> -->
						<p><%= c.name %></p>
					</div>
				</div>
			<% end %>
		</div>
		<div class="row">
			<div class="col-12 text-center">
				<%= link_to 'See All Cuisines', cuisines_path, class: 'link __animate-link' %>
			</div>
		</div>
	</div>
</section>

<section id="category-section">
	<div class="container">
