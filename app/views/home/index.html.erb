<section id="book-table-section">
	<div class="container-fluid">
		<div class="row">
			<div class="col-12 text-center">
				<h1 class="display-4">Book A Table</h1>
			</div>
		</div>
		<div class="row justify-content-end m-2 p-5">
			<div class="col-12 col-md-4">
				<%= render 'bookings/form' %>

				<hr class="rightEntry">

				<p class="rightEntry">Or Call Us to Book - __________</p>
			</div>
		</div>
	</div>
</section>

<section id="connect-section">
	<div class="container">
		<div class="row">
			<div class="col-12 text-center">
				<h1 class="display-4 mb-3">Connect With Us</h1>
			</div>
		</div>
		<div class="row">
			<div class="col-md-6 col-12">
				<div class="row mt-5">
					<div class="col-12">
						<p class="fadeEntry">No matter what! Be it a new dish idea, any type of feedback, or even some kind of praise, just drop a message for us!</p>
						<p class="fadeEntry">We would like to hear form you.</p>
					</div>
				</div>
			</div>
			<div class="col-12 col-md-6">
				<form action="">
					<div class="form-group">
						<input type="text" name="name" placeholder="Name" class="form-control light-form rightEntry">
					</div>
					<div class="form-group">
						<textarea name="message" id="message" rows="3" placeholder="What do you want to say?" class="form-control light-form rightEntry"></textarea>
					</div>
					<div class="form-group">
						<button type="submit" class="btn link rightEntry">Send</button>
					</div>
				</form>
				<div class="row justify-content-center">
					<div class="col-2 text-center"><i class="fa fa-social fa-facebook-square"></i></div>
					<div class="col-2 text-center"><i class="fa fa-social fa-twitter"></i></div>
					<div class="col-2 text-center"><i class="fa fa-social fa-instagram"></i></div>
					<div class="col-2 text-center"><i class="fa fa-social fa-google"></i></div>
				</div>
			</div>
		</div>
	</div>
</section>

