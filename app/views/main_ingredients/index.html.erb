<h1>Main Ingredients</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @main_ingredients.each do |main_ingredient| %>
      <tr>
        <td><%= link_to 'Show', main_ingredient %></td>
